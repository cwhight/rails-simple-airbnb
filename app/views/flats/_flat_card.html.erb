<div class="m-3 card shadow-sm rounded w-30">
  <div class="p-2 bg-light" style="background-image: url(<%= flat.picture_url %>);">
    <h2 class="mb-0"><%= flat.name %></h2>
    <p class="mb-0"><%= flat.description %></p>
    <div class="d-flex">
      <p class="mr-3 mb-0"><span><i class="fas fa-user-friends"></i></span><%= flat.number_of_guests %></p>
      <p class="mb-0"><span><i class="fad fa-pound-sign"></i></span><%= flat.price_per_night %></p>
    </div>
  </div>
  <div class="d-flex justify-content-between p-2">
    <p><%= link_to 'More Details', flat_path(flat)  %></p>
    <p><%= link_to 'Edit', edit_flat_path(flat)  %></p>
    <p><%= link_to 'Delete', flat_path(flat), method: :delete  %></p>
  </div>
</div>
